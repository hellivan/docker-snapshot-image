{
    "name": "docker-snapshot-image",
    "description": "A module for creating a docker snapshot image of a node project",
    "version": "2.1.2",
    "engines": {
        "node": ">=10.3.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hellivan/docker-snapshot-image.git"
    },
    "main": "./dist/lib/index.js",
    "license": "MIT",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start:bin": "node dist/bin/docker-snapshot-image.js",
        "flow:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "version": "npm run flow:changelog && git add CHANGELOG.md",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "check-formatting": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint ./src --ext .ts",
        "test": "jest"
    },
    "dependencies": {
        "@types/node": "^10.3.0",
        "commander": "^4.0.1"
    },
    "bin": {
        "docker-snapshot-image": "./dist/bin/docker-snapshot-image.js"
    },
    "devDependencies": {
        "@types/jest": "^24.0.22",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "conventional-changelog-cli": "^2.0.27",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-prettier": "^3.1.1",
        "jest": "^24.9.0",
        "jest-circus": "^24.9.0",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "typescript": "^3.7.2"
    }
}
